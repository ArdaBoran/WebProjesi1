@using WebProjesi1.Utility
@model List<Urun>
@if (TempData["basarili"] !=null )
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div style="width:25%;float:left">
                @Html.TextBox("ara", null, new { @class = "form-control", @placeholder = "ARANACAK ÜRÜN BARKODU" })
            </div>

            <div style="float:left">
                <input type="submit" name="btn" value="Ara" class="btn btn-info" />

            </div>

        </div>

    }
</div>

    <div class="container">

            <div class="row pt-3 pb-4" >

            <div>

                <h1>Ürünler</h1>

            </div>
            
        </div>

    <table class="table table-bordered">
    <thead>
        <tr>


                <th>
                    Ürün Resmi

                </th>
                <th>
                    Id
                </th>

                <th>
                    Ürün İsmi
                </th>
                <th>
                    Açıklama
                </th>
                <th>
                    Barkod
                </th>
                <th>
                    Fiyat
                </th>
                <th>
                    Ürün Türü
                </th>
                <th>
                    Stok Adeti
                </th>
                <th>
                    
                </th>
                <th>
                   
                </th>
                



        </tr>


    </thead>
    <tbody>
        @foreach (var Urun in Model)
        {
                <tr>
                    <td align="center" valign="middle">
                        <img src="@Urun.ResimUrl" style="border-radius:7px border:1px solid #bbb9b9 ;max-width:145px; max-width275px" />  
                    </td>
                    <td align="center" valign="middle">@Urun.Id</td>
                    <td align="center" valign="middle">@Urun.UrunAdi</td>
                    <td align="center" valign="middle">@Urun.Tanim</td>
                    <td align="center" valign="middle">@Urun.Barkod</td>
                    <td align="center" valign="middle">@Urun.Fiyat</td>
                    <td align="center" valign="middle">@Urun.UrunTuru.Ad</td>
                    <td align="center" valign="middle">@Urun.StokMiktari</td>

                    @if (User.IsInRole(UserRoles.Role_Admin))
                    {
                        <td align="center" valign="middle">
                            <a asp-controller="Urun" asp-action="EkleGuncelle" asp-route-id="@Urun.Id" type="button" class="btn btn-success" style="width:150px">
                                Güncelle 
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a asp-controller="Urun" asp-action="Sil" asp-route-id="@Urun.Id" type="button" class="btn btn-danger"
                            style="width:150px">
                                Sil
                            </a>
                        </td>
                    }

                </tr>
        }

       


    </tbody>





</table>
@if (User.IsInRole(UserRoles.Role_Admin))
                        {
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Urun" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
                Yeni Ürün Ekle
            </a>
        </div>

    </div>
                        }

</div>






