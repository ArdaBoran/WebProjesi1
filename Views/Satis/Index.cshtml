@model List<Satis>
@if (TempData["basarili"] !=null )
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}



    <div class="container">

            <div class="row pt-3 pb-4" >

            <div>

                <h1> Ürün Satışları</h1>

            </div>
            
        </div>

    <table class="table table-bordered">
    <thead>
        <tr>

                <th>
                    Id
                </th>

                <th>
                    Müşteri No
                </th>
                <th>
                    Ürün İd
                </th>
               
                <th>
                    
                </th>
                <th>
                   
                </th>



        </tr>


    </thead>
    <tbody>
        @foreach (var Satis in Model)
        {
                <tr>
                    <td>@Satis.Id</td>
                    <td>@Satis.MusteriId</td>

                    <td>@Satis.Urun.UrunAdi</td>


                    <td>
                    <a asp-controller="Satis" asp-action="EkleGuncelle" asp-route-id="@Satis.Id" type="button" class="btn btn-success" style="width:150px">
                    Güncelle 
                    </a>
                    </td>
                    <td>
                        <a asp-controller="Satis" asp-action="Sil" asp-route-id="@Satis.Id" type="button" class="btn btn-danger"
                           style="width:150px">
                       Sil
                   </a>
                    </td>


                </tr>
        }

       


    </tbody>





</table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Satis" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">
                Yeni Satış İşlemi Yap
            </a>
        </div>

    </div>


</div>






