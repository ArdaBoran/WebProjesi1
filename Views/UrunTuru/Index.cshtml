@model List<UrunTuru>
@if (TempData["basarili"] !=null )
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}



    <div class="container">

            <div class="row pt-3 pb-4" >

            <div>

                <h1>Ürün Türleri</h1>

            </div>
            
        </div>

    <table class="table table-bordered">
    <thead>
        <tr>

                <th>
                    Id
                </th>

                <th>
                    Ürün Türü
                </th>
                <th>
                    
                </th>
                <th>
                   
                </th>



        </tr>


    </thead>
    <tbody>
        @foreach (var UrunTuru in Model)
        {
                <tr>
                    <td>@UrunTuru.Id</td>
                    <td>@UrunTuru.Ad</td>
                    <td>
                    <a asp-controller="UrunTuru" asp-action="Guncelle" asp-route-id="@UrunTuru.Id" type="button" class="btn btn-success" style="width:150px">
                    Güncelle 
                    </a>
                    </td>
                    <td>
                        <a asp-controller="UrunTuru" asp-action="Sil" asp-route-id="@UrunTuru.Id" type="button" class="btn btn-danger"
                           style="width:150px">
                       Sil
                   </a>
                    </td>


                </tr>
        }

       


    </tbody>





</table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="UrunTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Ürün Türü Oluştur
            </a>
        </div>

    </div>


</div>






